<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.PagamentoEfetuado"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">

    <VerticalStackLayout Padding="20"
                         VerticalOptions="CenterAndExpand"
                         Spacing="25">


       
        <Label Text="Pagamento Efetuado!"
               FontSize="48"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalTextAlignment="Center" />

       
        <Label Text="Sua hospedagem foi confirmada com sucesso."
               FontSize="18"
               TextColor="DarkGreen"
               HorizontalTextAlignment="Center"
               Margin="0, -10, 0, 0"/>

       
        <Frame CornerRadius="20"
               BackgroundColor="Black"
               Padding="20"
               HasShadow="True"
               Margin="10">

            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout>
                    <Label Text="Suíte: " FontAttributes="Bold"/>
                    <Label Text=" Super Luxo" TextColor="{StaticResource Primary}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Check-in: " FontAttributes="Bold"/>
                    <Label Text=" 27/05/2024" TextColor="{StaticResource Primary}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Check-out: " FontAttributes="Bold"/>
                    <Label Text=" 30/05/2024" TextColor="{StaticResource Primary}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Valor Pago: " FontAttributes="Bold"/>
                    <Label Text=" R$ 750,00" TextColor="{StaticResource Primary}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        
        <Button Text="Voltar ao Início"
                BackgroundColor="Grey"
                TextColor="White"
                CornerRadius="25"
                FontAttributes="Bold"
                WidthRequest="250"
                HorizontalOptions="Center"
                Clicked="VoltarAoInicio_Clicked"/>

    </VerticalStackLayout>
</ContentPage>
